@model prima.Models.Calcule
@{
    ViewBag.Title = "Calculator Acoperis";
}

<div class="caseta">
    <h2 class="titlu">Introduceti datele necesare</h2>

    <p class="text">
        Suprafata acoperisului
    </p>
    @using (Html.BeginForm(actionName: "CalculeazaPutereAcoperis", controllerName: "Calcul", method: FormMethod.Get))
    {
        @Html.HiddenFor(b => b.PanouId)
        @Html.HiddenFor(b => b.JudetId)
        @Html.TextBoxFor(b => b.Suprafata, null, new { placeholder = "Scrieti Suprafata acoperisului", @class = "formcontrol" })<b style="font-size:100%"> [m²]</b>
        @Html.ValidationMessageFor(b => b.Suprafata, "", new { @class = "text-danger" })

        <p class="text">
            Unghiul la care vor fi plasate panourile solare

        </p> // din studiul pentru bucuresti

        @Html.TextBoxFor(b => b.Unghi, null, new { placeholder = "Scrieti Unghiul la care este inclinat acoperisul", @class = "formcontrol" }) <b style="font-size:125%"> [°]</b>
        @Html.ValidationMessageFor(b => b.Unghi, "", new { @class = "text-danger" })
 <p class="text-mic"> *unghiul optim pentru Romania este de 37°</p>

<button class="btn btn-primary" type="submit">Calculeaza</button>
<br />
}
</div>